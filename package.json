{
  "name": "mosx",
  "version": "0.8.0",
  "description": "Multiview observable state management engine",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "patch": "tsc && npm version patch",
    "major": "tsc && npm version major",
    "minor": "tsc && npm version minor",
    "build": "tsc",
    "test": "jest --verbose",
    "docs:dev": "vuepress dev .docs",
    "docs:build": "vuepress build .docs"
  },
  "keywords": [
    "mobx",
    "state management",
    "magx",
    "serializer"
  ],
  "author": "Damir Yusipov",
  "license": "MIT",
  "dependencies": {
    "mobx": "^5.15.7",
    "patchpack": "^0.4.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
